<main class="hoge">
  <div class="hoge">
    <div class="hoge">
      <p class="hoge">
        <%= (@work.title) %>
      </p>
      <%= link_to "by#{@work.user.nickname}", root_path(@work.user.id), class: :hoge %>
      <% if user_signed_in? && current_user.id == @work.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_work_path(@work.id), class: :hoge %>
          <%= link_to "削除する", work_path(@work.id), method: :delete ,class: :hoge %>
        </div>
      <% end %>
      <div class="hoge">
        <%= image_tag(@work.image)%>
      </div>
      <div class="hoge">
        <div class="hoge">
          <p class="hoge">投稿内容</p>
          <p class="hoge">
            <%= (@work.genre.name) %>
          </p>
        <div class="hoge">
          <p class="hoge">タイトル</p>
          <p class="hoge">
            <%= (@work.title) %>
          </p>
        </div>
        <div class="hoge">
          <p class="hoge">内容</p>
          <p class="hoge">
            <%= (@work.content) %>
          </p>
        </div>
        <div class="hoge">
          <p class="hoge"> 感想</p>
          <p class="hoge">
            <%= (@work.inpression) %>
          </p>
        </div>
     <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with(model:[@work, @comment], local: true) do |f|%>
            <div class="field">
              <%= f.label :reaction, "コメント" %><br />
              <%= f.text_field :reaction %>
            </div>
            <div class="actions">
              <%= f.submit "送信する" ,class: :form__btn %>
            </div>
          <% end %> 
        <% else %>
        <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
        <% end %>

        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.reaction %>
              <%= link_to (comment.user.nickname), root_path, class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
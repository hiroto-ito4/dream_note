<%= form_with model: @work,local: true do |f| %>

  <div class="field">
    <%= f.label :image, "画像があれば添付してください" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :投稿内容を選択してください%><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class: :hoge}) %>
  </div>

  <div class="field">
    <%= f.label :アクションのタイトルをつけましょう %><br />
    <%= f.text_field :title, class: :hoge %>
  </div>

  <div class="field">
    <%= f.label :アクションの内容を書きましょう %><br />
    <%= f.text_area :content, class: :hoge %>
  </div>
  
  <div class="field">
    <%= f.label :アクションに対する感想を残しましょう %><br />
    <%= f.text_area :inpression, class: :hoge %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :hoge %>
  </div>
<% end %>
<%= form_with model: @work,local: true do |f| %>

<div class="img-upload">
  <div class="click-upload">
    <%= f.label :image, "画像があれば添付してください",class: "click-image"%><br />
    <%= f.file_field :image, id:"item-image" ,class: "click-image"%>
  </div>
</div>

<div class ="form_field">
  <div class="f_field">
    <%= f.label :投稿内容を選択してください%><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class: :w_genle}) %>
  </div>

  <div class="f_field">
    <%= f.label :アクションのタイトルをつけましょう %><br />
    <%= f.text_field :title, class: :w_title ,size:"50" %>
  </div>

  <div class="f_field">
    <%= f.label :アクションの内容を書きましょう %><br />
    <%= f.text_area :content, class: :w_content ,rows:"5",cols:"50" %>
  </div>
  
  <div class="f_field">
    <%= f.label :アクションに対する感想を残しましょう %><br />
    <%= f.text_area :inpression, class: :w_inpression ,rows:"5",cols:"50" %>
  </div>

  <div class="btn">
    <%= f.submit "投稿する", class:"red-btn" %>
  </div>
</div>

<% end %>
<div class="card">
  <%= link_to image_tag(work.image),work_path(work.id),class: :card__img %>
  <div class="card__summary">
    <%= link_to "#{work.user.nickname}さんの投稿",user_path(work.user.id),class: :card__user %>
  </div>
  <div class="card_body">
    <%= link_to (work.title), work_path(work.id),class: :card__title %>
  </div>
</div>